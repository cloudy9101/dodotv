<div class="edit-user">
	<div class="col-md-12">
		<div class="page-header"><h3>编辑资料</h3></div>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
			<%= devise_error_messages! %>
			<div class="form-group">
				<%= f.label :email, "邮箱", class: "control-label col-md-3" %>
				<div class="col-md-9">
					<%= f.email_field :email, class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :password, "密码", class: "control-label col-md-3" %>
				<div class="col-md-9">
					<%= f.password_field :password, class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :password_confirmation, "密码确认", class: "control-label col-md-3" %>
				<div class="col-md-9">
					<%= f.password_field :password_confirmation, class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :current_password, "原密码", class: "control-label col-md-3" %>
				<div class="col-md-9">
					<%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-md-3 control-label">原头像</label>
				<div class="col-md-9">
					<%= image_tag(resource.avatar.user_thumb) if resource.avatar? %>
				</div>
			</div>

			 <div class="form-group">
		 	 	<%= f.label :avatar, "上传头像：", class: "col-sm-3 control-label" %>
		 	 	<div class="col-sm-9">
		 	 		<%= f.file_field :avatar, class: "form-control" %>
		 	 		<%= f.hidden_field :avatar_cache %>
		 	 	</div>
		 	 </div>

		 	 <div class="form-group">
			    	<%= f.label :username, "昵称", class: "control-label col-sm-3" %>
			    	<div class="col-sm-9">
			    		<%= f.text_field :username, class: "form-control" %>
			    	</div>
			    </div>

			    <div class="form-group">
			    	<%= f.label :userbrief, "个人简介", class: "control-label col-sm-3" %>
			    	<div class="col-sm-9">
			    		<%= f.text_area :userbrief, size: "100x5", class: "form-control" %>
			    	</div>
			    </div>

			    <div class="submit"><%= f.submit "提交更新", class: "btn btn-primary" %></div>

		<% end %>
	</div>
	<div class="clear"></div>
</div>

<div class="edit-user">
	<div class="panel panel-danger">
		<div class="panel-heading">删除账户！</div>
		<div class="panel-body">
			<p>真的要彻底删除账户吗?（此操作不可撤销！）</p>
			<%= button_to "删除账户", registration_path(resource_name), data: { confirm: "确认删除账户?" }, method: :delete, class: "btn btn-danger" %>
		</div>
	</div>
</div>
