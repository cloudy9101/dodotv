<div class="form-center">
	<h2>登陆</h2>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
		  <div class="form-group">
		  	<%= f.label :email,"邮箱：", class: "col-sm-2 control-label col-sm-offset-2" %>
		  	<div class="col-sm-4">
		  		 <%= f.email_field :email, autofocus: true, class: "form-control" %>
		  	</div>
		  </div>

		  <div class="form-group">
		  	<%= f.label :password,  "密码：", class: "col-sm-2 control-label col-sm-offset-2" %>
		  	<div class="col-sm-4">
		  		<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
		  	</div>
		    </div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "记住我？" %></div>
		  <% end -%>

		  <div><%= f.submit "登陆", class: "btn btn-primary" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
