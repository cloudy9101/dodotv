<div class="category-item-img col-md-4">
	<%= image_tag article.avatar.article_thumb.url, size: "120x75" %>
</div>
<div class="category-item-right col-md-8">
	<div class="title">
		<%= link_to article.title, article_path(article) %>
	</div>
	<div class="stat">
		<span class="glyphicon glyphicon-stats"></span> <%= article.count %>
		<span class="glyphicon glyphicon-star"></span> <%= article.favout_count %>
	</div>
	<div class="author">
		<span class="glyphicon glyphicon-user"></span> <%= link_to article.user.username %>
	</div>
</div>

<div class="info col-md-12">
	<%= article.remark[0..60] %>
</div>
