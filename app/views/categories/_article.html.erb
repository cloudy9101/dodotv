<div class="row">
	<div class="col-sm-4">
		<%= image_tag article.avatar.article_thumb.url, height: "75", width: "120" %>
	</div>
	<div class="col-sm-8">
		<div class="row item-title">
			<%= link_to article.title, article_path(article) %>
		</div>
		<div class="row item-count">
			<span class="glyphicon glyphicon-stats"></span> <%= article.count %>
			<span class="glyphicon glyphicon-star"></span> <%= article.favout_count %>
		</div>
		<div class="row item-author">
			<span class="glyphicon glyphicon-user"></span> <%= link_to article.user.username %>
		</div>
	</div>
</div>
<div class="row">
	<div class="info">
		<%= article.remark[0..60] %>
	</div>
</div>
